{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
<div class="container my-5">
    <h2 class="text-center mb-4">üõí Mon Panier</h2>
    
    {% if commandes is empty %}
        <p class="text-center text-muted">Votre panier est vide.</p>
    {% else %}
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Produit</th>
                        <th>Image</th>
                        <th>Quantit√©</th>
                        <th>Prix Unitaire</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% set total = 0 %}
                    {% for commande in commandes %}
                        {% set produit = commande.produit %}
                        {% set sous_total = produit.prixUnitaire * commande.quantite %}
                        {% set total = total + sous_total %}
                        <tr>
                            <td>{{ produit.nom }}</td>
                            <td>
                                <img src="{{ asset(produit.urlImageProduit) }}" width="80" height="80" alt="{{ produit.nom }}">
                            </td>
                            <td>
                                <form action="{{ path('modifier_quantite', {id: commande.id}) }}" method="POST" class="d-flex">
                                    <input type="number" name="quantite" value="{{ commande.quantite }}" min="1" class="form-control w-50">
                                    <button type="submit" class="btn btn-warning ms-2">üîÑ</button>
                                </form>
                            </td>
                            <td>{{ produit.prixUnitaire }} DT</td>
                            <td>{{ sous_total }} DT</td>
                            <td>
                                <a href="{{ path('supprimer_commande', {id: commande.id}) }}" class="btn btn-danger">‚ùå</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Affichage du Total -->
        <h3 class="text-right mt-4">üí∞ Total du Panier: {{ total }} DT</h3>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('liste_produits') }}" class="btn btn-primary">üõçÔ∏è Continuer mes achats</a>
            <a href="{{ path('finaliser_commande') }}" class="btn btn-success">‚úÖ Finaliser la commande</a>
        </div>
    {% endif %}
</div>
{% endblock %}
